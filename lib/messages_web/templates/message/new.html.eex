<section class="row">
  <h1>New Message</h1>
</section>

<%= form_for @message, Routes.message_path(@conn, :create), fn f -> %>
<%= label f, :subject, class: "form-label" %>
<%= text_input f, :subject, class: "form-control" %>
<%= label f, :body, class: "form-label" %>
<%= textarea f, :body, class: "form-control", rows: "3" %>
<%= submit "Submit", class: "btn btn-primary" %>
<% end %>
